@model IEnumerable<RecipeSharingSite.Models.Recipe>


<h1 class="center">Recipe Sharing</h1>
<div style="display: flex; flex-wrap: wrap;">
    @foreach (Recipe item in Model)
    {   
        <div style="block">
        <div class="recipeBox center">
            <img src="@item.ImageUrl" width="500px"/>
            <div class="containers">
                <h4><b><a asp-action="RecipeView" asp-route-id ="@item.Id">@item.Name</a></b></h4>
                <p>Author: @item.AuthorName</p>
                <p>@item.Description</p>
                <p>Number of Upvotes: @item.Upvotes</p>
            </div>
        </div>
        <div style="display:flex; margin-left: 160px">
        
            @if (Context.Session.GetString("username") != null){
                    <form method="post" asp-action="Upvote" asp-route-id="@item.Id">
                    <button type="submit" class="recipeButton">Upvote</button>
                </form>
                if (Context.Session.GetString("username").Equals(item.AuthorName))
                {
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="recipeButton">Delete</button>
                    </form>
                }
            }
        </div>
        </div>
    }
</div>